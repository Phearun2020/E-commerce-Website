<style>
    .bottom {
        position: fixed;     
       text-align: center;    
       bottom: 0px; 
       width: 100%;
    }
</style>
<div class="row mt-5">
    <class class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
        <p class="btn mb-1 text-secondary">Enter your email address and password to <br> access to continue</p>
        <%- include ("./partials/messages"); %>
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
        <p class="btn text-secondary mt-4">
          Don't have an Account? <a href="/users/register">Register</a>
        </p>
      </div>

    </div>
</div>
<div class="bottom">
